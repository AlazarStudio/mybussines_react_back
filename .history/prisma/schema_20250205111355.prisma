generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  email    String @unique
  login    String @unique
  name     String
  password String
}

model News {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title       String
  description String
  date        DateTime
  img         String[]
}

model Form {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title       String
  services    Service[]     @relation("FormToService")
  FormService FormService[]
}

model Center {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title         String
  services      Service[]       @relation("CenterToService")
  CenterService CenterService[]
}

model Service {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title       String
  description String
  img         String[]

  forms         Form[]          @relation("FormToService")
  formService   FormService[]
  centers       Center[]        @relation("CenterToService")
  centerService CenterService[]
}

model FormService {
  formId    Int
  serviceId Int

  form    Form    @relation(fields: [formId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@id([formId, serviceId]) // составной первичный ключ
}

model CenterService {
  centerId  Int
  serviceId Int

  center  Center  @relation(fields: [centerId], references: [id], onDelete: Cascade)
  service Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@id([centerId, serviceId]) // составной первичный ключ
}

model Banner {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  img String[]
}

model Video {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title String
  url   String
  date  DateTime
  img   String[]
}

model Map {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title String
  ip    String
  ul    String
  all   String
}

model TypeSupport {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title    String
  supports Support[] // Один тип поддержки может быть у нескольких записей в Support
}

model TagsSupport {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title     String
  supports  SupportTags[]
  Support   Support?      @relation(fields: [supportId], references: [id])
  supportId Int?
}

model Support {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  title       String
  description String

  typeSupportId Int
  typeSupport   TypeSupport @relation(fields: [typeSupportId], references: [id]) // Связь один ко многим

  tagsSupport TagsSupport[] @relation("SupportTags")
  SupportTags SupportTags[]
}

model SupportTags {
  supportId Int
  tagId     Int

  support Support     @relation(fields: [supportId], references: [id], onDelete: Cascade)
  tag     TagsSupport @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([supportId, tagId]) // Составной первичный ключ
}
